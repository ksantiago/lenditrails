<% title "LendIt Europe 2014 Podcasts Page" %>
<% meta_description "LendIt Europe 2014 keynotes and presentations" %>
<% meta_keywords "p2p, start-up, online lending, peer-to-peer, LendIt Europe" %>

<% body_class "pg-podcasts" %>
<div class="general-background">
	<div class="row podcasts-main">
		<div class="columns ">
			<h1>LendIt Europe 2014 Podcasts</h1>
			<div class="podcast-actions">
				<div>
					<a href="https://itunes.apple.com/us/podcast/lendit-conference/id962047495" target="_blank"> <i class="fa fa-music"></i> Subscribe via iTunes</a>
				</div>
				<div>
					<a href="http://liaudio.lendit.libsynpro.com/rss" target="_blank"> <i class="fa fa-rss"></i> RSS Feed</a>
				</div>
				<div>
					<a href="http://www.stitcher.com/podcast/lendit-conference?refid=stpr" target="_blank"> <i class="fa fa-play-circle-o"></i> Listen on Stitcher</a>
				</div>
			</div>

			<ul class="podcast-items">
				<% @eu14podcasts.each_with_index do |podcast, index| %>
					<li>
						<div class="podcast-title">
							<b>#<%= index + 1 %>:</b> <i><a href="#" data-reveal-id="podcast-<%= podcast.id %>"><%= raw podcast.video.title %></a></i>
						</div>
						<div class="podcast-item-embed reveal-modal" id="podcast-<%= podcast.id %>" data-reveal>
							<div class="podcast-modal-header"># <%= index + 1 %>: <%= raw podcast.video.title %></div>
							<div class="podcast-modal-audio"><%= raw podcast.audio_embed %></div>
							<div class="podcast-modal-desc"><%= raw podcast.video.description %></div>
							<div><%= link_to 'Watch the video', eu14_video_path(podcast.video) %></div>
							<a href="" class="close-reveal-modal">&#215;</a>
						</div>
					</li>
				<% end %>
			</ul>

		</div>
	</div>
</div>
