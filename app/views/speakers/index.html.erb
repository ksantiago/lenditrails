<%= title "LendIt Speakers Page" %>
<% meta_description "LendIt Conference speakers are esteemed leaders in the peer-to-peer industry." %>
<% meta_keywords "p2p, online lending, peer-to-peer, LendIt, speakers, presenters" %>
<%= canonical_tag -%>

<style>
	/*temp styles*/
/*	.subhero .show-more {
		height: 50px;
		background #EEE;
	}*/
/*	.subhero .show-more:hover {
		color #blue;
	}*/

	.subhero.show-more {
		height: 50px;
	}

	.subhero.show-more-height {
		height: 540px;
		overflow: hidden;
	}

</style>

<main>
	<div class="subhero show-more-height">
		<div class="container">
			<h1>LendIt Europe Speakers</h1>
			<section class="speakers-intro">
				<div class="speakers-signup"><a href="/speakers/sign-up"><button>Sign Up To Be A Speaker</button></a></div>
				<p>The following speakers have been confirmed for LendIt Europe 2014.</p>
			</section>

			<section class="current-speakers">
				<% @europe_speakers.each do |speaker| %>
					<div class="speaker-col">
						<div class="speaker">
							<div class="speaker-top">
								<img src="<%= speaker.img_url %>" class="speaker-image" alt="<%= speaker.first_name %> <%= speaker.last_name %>">
								<div class="speaker-top-info">
									<div class="speaker-name"><%= speaker.first_name %> <%= speaker.last_name %></div>
									<div class="speaker-title"><%= speaker.title %></div>
									<div class="speaker-company"><%= speaker.company_name %></div>
								</div>
							</div>

							<div class="speaker-bio">
								<%= raw speaker.bio %>
							</div>
								<div class="show-more">See More</div>
						</div>
					</div>
				<% end %>
			</section>
		</div>
	</div>

	<section class="past-speakers">
		<div class="container">
			<h2>Past Speakers</h2>
			<% @past_speakers.each do |speaker| %>
				<div class="speaker">
					<div class="speaker-top">
						<a class="past-speaker" href="#<%= speaker.first_name %><%= speaker.last_name %>">
							<img src="<%= speaker.img_url %>" class="speaker-image" alt="<%= speaker.first_name %> <%= speaker.last_name %>">
							<div class="speaker-top-info">
								<div class="speaker-name"><%= speaker.first_name %> <%= speaker.last_name %></div>
								<div class="speaker-title"><%= speaker.title %></div>
								<div class="speaker-company"><%= speaker.company_name %></div>
							</div>
						</a>
					</div>
					<div class="speaker-bio" style="/*temp styles*/display:none;">
						<div id="<%= speaker.first_name %><%= speaker.last_name %>" class="speaker-container">
							<div class="speaker-top-info">
								<img src="<%= speaker.img_url %>" class="speaker-image" alt="<%= speaker.first_name %> <%= speaker.last_name %>">
								<div class="speaker-name"><%= speaker.first_name %> <%= speaker.last_name %></div>
								<div class="speaker-title"><%= speaker.title %></div>
								<div class="speaker-company"><%= speaker.company_name %></div>
							</div>
							<div class="speaker-bio-text"><div class="speaker-bio-text-inner"><%= raw speaker.bio %></div></div>
							<div class="speaker-bio-mask"></div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</section>
</main>
